{
  "name": "slash",
  "version": "0.1.0",
  "description": "htm + hyper + reactive signals (no VDOM) â€” tiny, fast, DX-first",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs",
      "bun": "./src/index.ts"
    }
  },

  "scripts": {
    "clean": "rm -rf dist",
    "build:js:esm": "bun build src/index.ts --outfile dist/index.mjs --format esm --minify",
    "build:js:cjs": "bun build src/index.ts --outfile dist/index.cjs --format cjs --minify",
    "build:js": "bun run build:js:esm && bun run build:js:cjs",
    "build:types": "tsc -p ../../tsconfig.build.json",
    "build": "bun run clean && bun run build:js && bun run build:types",
    "prepublishOnly": "bun run build",
    "dev": "bun build src/index.ts --outdir dist --format esm --watch"
  },
  "dependencies": {
    "htm": "^3.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.5.0",
    "typescript": "^5.6.2"
  }
}

